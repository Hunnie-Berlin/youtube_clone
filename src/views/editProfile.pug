extends layouts/main.pug

block content
    .form-container
        form(actoin=routes.users+routes.editProfile, method="POST", enctype="multipart/form-data")
            .fileUpload
                label(for="avatar") Avatar 
                input(type="file", id="avatar", name="avatar", accept="image/*")
            input(type="text", name="name", placeholder="Name", value=loggedUser.name)
            input(type="text", name="email", placeholder="Email", value=loggedUser.email)
            input(type="submit", value="Update Profile")
        