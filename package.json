{
  "name": "youtube_clone",
  "version": "1.0.0",
  "description": "with NodeJS, Express, MongoDB, Mongoose, Pug, SCSS, Webpack etc.",
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore '.scss' --ignore 'static' ",
    "dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
    "build:assets": "cd src && WEBPACK_ENV=production webpack",
    "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
    "copyAll": "cp -R src/static build && cp -R src/views build",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    // "prebuild": "rm -rf build",
    "start": "PRODUCTION=TRUE node build/init.js",
    "prestart": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hunnie-Berlin/youtube_clone.git"
  },
  "author": "Hunnie",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hunnie-Berlin/youtube_clone/issues"
  },
  "homepage": "https://github.com/Hunnie-Berlin/youtube_clone#readme",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^10.0.1",
    "aws-sdk": "^2.779.0",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.6.5",
    "css-loader": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "helmet": "^4.1.1",
    "mini-css-extract-plugin": "^0.11.3",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "node-sass": "^4.14.1",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1",
    "postcss": "^8.1.1",
    "postcss-loader": "^4.0.2",
    "pug": "^3.0.0",
    "sass-loader": "^10.0.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "eslint": "^7.10.0",
    "nodemon": "^2.0.4"
  }
}
